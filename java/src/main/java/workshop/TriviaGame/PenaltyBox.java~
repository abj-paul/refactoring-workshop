
public abstract class PenaltyBox extends Question implements IPenaltyBox {
    private boolean playerInPenaltyBox(int playerIndex){
	    return inPenaltyBox[playerIndex];
    }
    private void getOutOfPenalty(){
	isGettingOutOfPenaltyBox = true;
	Announcement.announce(players.get(currentPlayer) + " is getting out of the penalty box");
    }
    
    private void getNewPlaceBasedOn(int roll){
        places[currentPlayer] = places[currentPlayer] + roll;
	if (places[currentPlayer] > 11) places[currentPlayer] = places[currentPlayer] - 12;
	
	Announcement.announce(players.get(currentPlayer)
		 + "'s new location is "
		 + places[currentPlayer]);
    }

    private void waitInPenaltyBox(){
	Announcement.announce(players.get(currentPlayer) + " is not getting out of the penalty box");
	isGettingOutOfPenaltyBox = false;
    }

    private void sendPlayerToPenaltyBox(int playerIndex){
        player.inPenaltyBox[playerIndex] = true;
    }

}
