package workshop;

import java.util.ArrayList;
import java.util.LinkedList;


public class TriviaGame extends RollDice implements ITriviaGame {
    int currentPlayer;
    boolean gettingOutOfPenaltyBox;

    TriviaGame(){
	this.currentPlayer = 0;
    }

    private void gotoNextPlayer(){
	currentPlayer++;
	if (currentPlayer == player.players.size()) currentPlayer = 0;
    }

    private boolean didPlayerWin() {
        return !(player.purses[currentPlayer] == 6);
    }

    int getCurrentPlayer(){
	return this.currentPlayer;
    }

    boolean isGettingOutOfPenaltyBox(){
	return getCurrentPlayer==true;
    }

}

